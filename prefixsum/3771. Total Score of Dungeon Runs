class Solution {
public:
    int find(int i , int hp, vector<int>& prefix, int require){
        int low = 0; 
        int high = i ;  // only search to the LEFT of i
        int ans = i+1;       // default: start exactly at i

        while (low <= high) {
            int mid = (low + high) / 2;

            int a = prefix[i] - ((mid > 0) ? prefix[mid - 1] : 0);
            int rq = hp - a;

            if (rq >= require) {
                ans = mid;      // mid is a valid left boundary
                high = mid - 1; // try to go even more left
            } else {
                low = mid + 1;
            }
        }
        return ans; 
    }

    long long totalScore(int hp, vector<int>& damage, vector<int>& requirement) {
        int n = damage.size();

        // prefix sum
        vector<int> prefix(n, 0);
        prefix[0] = damage[0];
        for (int i = 1; i < n; i++) {
            prefix[i] = prefix[i - 1] + damage[i];
        }

        long long result = 0;

        // for each room i
        for (int i = 0; i < n; i++) {
            int boundary = find(i, hp, prefix, requirement[i]);
            result += (i - boundary+1);   // number of valid windows ending at i
        }

        // handle i = 0 separately
        //if (hp - prefix[0] >= requirement[0]) result++;  // single room window

        return result;
    }
};
