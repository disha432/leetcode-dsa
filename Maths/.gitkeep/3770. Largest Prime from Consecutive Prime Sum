class Solution {
public:
    int largestPrime(int n) {
        //sieves of Erantheses

        vector<bool> track(n+1, true);
        track[0] = false;
        track[1] = false;
        for(int i = 2; i<=n; i++){
           if(track[i]){
             for(int j = 2*i; j<=n; j+=i){
                if(track[j] != false){
                    track[j] = false;
                }
             }
           }
        }
        vector<int> primes;
        for(int i = 2; i<=n; i++){
            if(track[i]){
                primes.push_back(i);
            }
        }
        if(primes.empty()) return 0;
        // cout<<"Primes";
        // for(int i = 1; i<primes.size(); i++){
        //   cout<<primes[i]<<" "; cout<<endl;
        // }
        vector<long long>prefix(primes.size(), 0);
        prefix[0] = primes[0];
        for(int i = 1; i<primes.size(); i++){
           prefix[i] = prefix[i-1] + primes[i];
        }
        //  cout<<"Prefixs";
        //    cout<<prefix[0]<<" ";
        //  for(int i = 1; i<primes.size(); i++){
        //    cout<<prefix[i]<<" ";
        //    cout<<endl;
        // }

        long long maxi = LLONG_MIN;
        for(int i = 0; i<prefix.size(); i++){
            if(prefix[i] > n) break;
            if(track[prefix[i]]){
                maxi = max(maxi, prefix[i]);
            }
        }
        
        return maxi;




    }
};
